@model IEnumerable<MovieListViewModel>


@if (Model.Count() == 0)
{
    <p>Er zijn geen films beschikbaar.</p>
}

else
{
<table>
    <tr>
        <th>title</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Title<a asp-controller="movie" asp-action="detail" asp-route-id="@item.Id">details</a></td>
    <td><a asp-controller="movie" asp-action="edit" asp-route-id="@item.Id">Edit</a></td>
</tr>
    }
</table>
}
